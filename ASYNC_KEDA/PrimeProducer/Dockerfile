#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080


FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["PrimeProducer.csproj", "."]
RUN dotnet restore "./PrimeProducer.csproj"
COPY . .
WORKDIR "/src/."
RUN dotnet build "PrimeProducer.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "PrimeProducer.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
EXPOSE 9000
ENV ASPNETCORE_URLS=http://*:9000
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "PrimeProducer.dll"]